<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>B.Tech AquaCulture Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <aside class="w-64 bg-white border-r border-gray-200 flex flex-col">
            <div class="p-4 border-b border-gray-200 flex flex-col items-center">
                <img src="/images/logo.png" alt="B.Tech Hatcheries" class="h-24 w-auto mb-2">
                <p class="text-xs font-bold text-blue-900 text-center uppercase tracking-wider">Hatcheries & Nauplii Center</p>
            </div>
            <nav class="flex-1 overflow-y-auto p-4">
                <ul class="space-y-2">
                    <li>
                        <a href="/dashboard" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'bg-blue-50 text-blue-600' : '' %>">
                            <i class="fas fa-chart-line w-5 mr-3"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/users" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'users' ? 'bg-blue-50 text-blue-600' : '' %>">
                            <i class="fas fa-users w-5 mr-3"></i>
                            <span>Users</span>
                        </a>
                    </li>
                    <li>
                        <a href="/dealers" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'dealers' ? 'bg-blue-50 text-blue-600' : '' %>">
                            <i class="fas fa-store w-5 mr-3"></i>
                            <span>Dealers</span>
                        </a>
                    </li>
                    <li>
                        <a href="/visits" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'visits' ? 'bg-blue-50 text-blue-600' : '' %>">
                            <i class="fas fa-calendar-check w-5 mr-3"></i>
                            <span>Visits</span>
                        </a>
                    </li>
                    <li>
                        <a href="/territories" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'territories' ? 'bg-blue-50 text-blue-600' : '' %>">
                            <i class="fas fa-map-marked-alt w-5 mr-3"></i>
                            <span>Territories</span>
                        </a>
                    </li>
                    <li>
                        <a href="/map" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'map' ? 'bg-blue-50 text-blue-600' : '' %>">
                            <i class="fas fa-map w-5 mr-3"></i>
                            <span>Live Map</span>
                        </a>
                    </li>
                    <li>
                        <a href="/audit" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'audit' ? 'bg-blue-50 text-blue-600' : '' %>">
                            <i class="fas fa-history w-5 mr-3"></i>
                            <span>Audit Logs</span>
                        </a>
                    </li>
                    <li class="pt-4 border-t border-gray-200">
                        <a href="/settings" class="flex items-center px-4 py-3 text-gray-700 rounded-lg hover:bg-blue-50 hover:text-blue-600 transition-colors <%= typeof currentPage !== 'undefined' && currentPage === 'settings' ? 'bg-blue-50 text-blue-600' : '' %>">
                            <i class="fas fa-cog w-5 mr-3"></i>
                            <span>Settings</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="p-4 border-t border-gray-200">
                <a href="/logout" class="flex items-center px-4 py-3 text-red-600 rounded-lg hover:bg-red-50 transition-colors">
                    <i class="fas fa-sign-out-alt w-5 mr-3"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top Navigation -->
            <header class="bg-white border-b border-gray-200 px-6 py-4">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-gray-800"><%= typeof title !== 'undefined' ? title : 'Dashboard' %></h2>
                    <div class="flex items-center space-x-4">
                        <div class="flex items-center space-x-2">
                            <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center text-white font-semibold">
                                <%= typeof user !== 'undefined' && user.name ? user.name.charAt(0).toUpperCase() : 'A' %>
                            </div>
                            <span class="text-sm text-gray-700"><%= typeof user !== 'undefined' && user.name ? user.name : 'Admin' %></span>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-6">
                <%- body %>
            </main>
        </div>
    </div>
    <script src="/js/main.js"></script>
</body>
</html>

