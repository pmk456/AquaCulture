<%- include('../partials/header', { title: 'Dealers', currentPage: 'dealers', user: user }) %>

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Dealers Management</h1>
            <p class="text-gray-600 mt-1">Manage dealer information and locations</p>
        </div>
        <a href="/dealers/new" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors flex items-center">
            <i class="fas fa-plus mr-2"></i>Add Dealer
        </a>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow p-4">
        <form class="grid grid-cols-1 md:grid-cols-5 gap-4" action="/dealers" method="GET">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
                <input 
                    type="text" 
                    name="search"
                    value="<%= filters?.search || '' %>"
                    placeholder="Name, phone, address..."
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                >
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Territory</label>
                <select name="territory_id" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">All Territories</option>
                    <% if (territories && territories.length) { %>
                        <% territories.forEach(t => { %>
                            <option value="<%= t.id %>" <%= filters?.territory_id == t.id ? 'selected' : '' %>><%= t.name %></option>
                        <% }) %>
                    <% } %>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Species</label>
                <select name="species" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">All Species</option>
                    <% if (speciesOptions && speciesOptions.length) { %>
                        <% speciesOptions.forEach(sp => { %>
                            <option value="<%= sp %>" <%= filters?.species === sp ? 'selected' : '' %>><%= sp.charAt(0).toUpperCase() + sp.slice(1) %></option>
                        <% }) %>
                    <% } %>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Min Farm Size (acres)</label>
                <input type="number" name="farm_size_min" value="<%= filters?.farm_size_min || '' %>" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Max Farm Size (acres)</label>
                <input type="number" name="farm_size_max" value="<%= filters?.farm_size_max || '' %>" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
            <div class="col-span-full flex justify-end space-x-3">
                <a href="/dealers" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50 text-sm">Reset</a>
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm flex items-center">
                    <i class="fas fa-filter mr-2"></i>Apply
                </button>
            </div>
        </form>
    </div>

    <!-- Dealers Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="overflow-x-auto">
            <table id="dealersTable" class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Address</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Species</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Farm Size</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Territory</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (dealers && dealers.length) { %>
                        <% dealers.forEach(dealer => { %>
                            <tr class="table-row">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-medium text-gray-900"><%= dealer.name %></div>
                                    <div class="text-sm text-gray-500">ID: <%= dealer.id %></div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= dealer.phone || 'N/A' %></td>
                                <td class="px-6 py-4 text-sm text-gray-500"><%= dealer.address %></td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800 capitalize"><%= dealer.species %></span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= dealer.farm_size %> acres</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= dealer.territory_name || 'Unassigned' %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <a href="/dealers/<%= dealer.id %>" class="text-blue-600 hover:text-blue-900 mr-4">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/dealers/<%= dealer.id %>/edit" class="text-blue-600 hover:text-blue-900">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="px-6 py-6 text-center text-gray-500">No dealers found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

