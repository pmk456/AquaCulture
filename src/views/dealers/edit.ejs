<%- include('../partials/header', { title: 'Edit Dealer', currentPage: 'dealers', user: user }) %>

<div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-lg shadow p-6">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-800">Edit Dealer</h1>
            <p class="text-gray-600 mt-1">Update dealer information</p>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded text-red-700 text-sm">
                <%= error %>
            </div>
        <% } %>

        <form class="space-y-6" method="POST" action="/dealers/<%= dealerId %>">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Dealer Name *</label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    value="<%= dealer.name %>"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                >
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone *</label>
                    <input 
                        type="tel" 
                        id="phone" 
                        name="phone" 
                        value="<%= dealer.phone || '' %>"
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                </div>
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email"
                        value="<%= dealer.email || '' %>"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                </div>
            </div>

            <div>
                <label for="address" class="block text-sm font-medium text-gray-700 mb-2">Address *</label>
                <textarea 
                    id="address" 
                    name="address" 
                    rows="3"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                ><%= dealer.address %></textarea>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Dealer Location (Pick on Map)</label>
                <div class="mb-3 flex gap-2">
                    <div class="flex-1 relative">
                        <input 
                            type="text" 
                            id="location-search" 
                            placeholder="Search for a location (e.g., city, street)..."
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                            autocomplete="off"
                        >
                    </div>
                    <button 
                        type="button" 
                        id="search-location-btn"
                        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                    >
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
                <div id="dealer-map" style="height: 400px; width: 100%; border: 2px solid #e5e7eb; border-radius: 0.5rem;" class="mb-2 hidden"></div>
                <p class="text-xs text-gray-500 mb-1">
                    1) Select a territory below to load its boundary. 2) Search for a location or click on the map to pick the dealer location. Latitude and longitude fields will be filled automatically.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="latitude" class="block text-sm font-medium text-gray-700 mb-2">Latitude *</label>
                    <input 
                        type="number" 
                        step="any"
                        id="latitude" 
                        name="latitude" 
                        value="<%= dealer.latitude %>"
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                </div>
                <div>
                    <label for="longitude" class="block text-sm font-medium text-gray-700 mb-2">Longitude *</label>
                    <input 
                        type="number" 
                        step="any"
                        id="longitude" 
                        name="longitude" 
                        value="<%= dealer.longitude %>"
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="farm_size" class="block text-sm font-medium text-gray-700 mb-2">Farm Size (acres) *</label>
                    <input 
                        type="number" 
                        id="farm_size" 
                        name="farm_size" 
                        value="<%= dealer.farm_size %>"
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                </div>
                <div>
                    <label for="species" class="block text-sm font-medium text-gray-700 mb-2">Species *</label>
                    <select 
                        id="species" 
                        name="species" 
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                        <% const speciesList = ['tilapia','catfish','salmon','trout','other']; %>
                        <% speciesList.forEach(sp => { %>
                            <option value="<%= sp %>" <%= dealer.species === sp ? 'selected' : '' %>><%= sp.charAt(0).toUpperCase() + sp.slice(1) %></option>
                        <% }) %>
                    </select>
                </div>
            </div>

            <div>
                <label for="territory" class="block text-sm font-medium text-gray-700 mb-2">Territory *</label>
                <select 
                    id="territory" 
                    name="territory_id" 
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                >
                    <% if (territories && territories.length) { %>
                        <% territories.forEach(t => { %>
                            <option value="<%= t.id %>" <%= dealer.territory_id === t.id ? 'selected' : '' %>><%= t.name %></option>
                        <% }) %>
                    <% } %>
                </select>
            </div>

            <div>
                <label for="notes" class="block text-sm font-medium text-gray-700 mb-2">Notes</label>
                <textarea 
                    id="notes" 
                    name="notes" 
                    rows="4"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                ><%= dealer.notes || '' %></textarea>
            </div>

            <div class="flex items-center justify-end space-x-4 pt-4 border-t border-gray-200">
                <a href="/dealers/<%= dealerId %>" class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                    Cancel
                </a>
                <button 
                    type="submit"
                    class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                >
                    Update Dealer
                </button>
            </div>
        </form>
    </div>
</div>
<script src="/js/map.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
    const latInput = document.getElementById('latitude');
    const lngInput = document.getElementById('longitude');
    
    const initialPos = {
        lat: parseFloat(latInput.value) || 20.5937,
        lng: parseFloat(lngInput.value) || 78.9629
    };

    const territorySelect = document.getElementById('territory');
    const mapContainer = document.getElementById('dealer-map');
    const territories = <%- JSON.stringify(territories || []) %>;

    const map = new TerritoryMap('dealer-map', {
        center: initialPos,
        zoom: 12,
        enableDrawing: true,
        onMarkerComplete: (coordinates) => {
            latInput.value = coordinates.lat;
            lngInput.value = coordinates.lng;
        },
        onMarkerMove: (coordinates) => {
            latInput.value = coordinates.lat;
            lngInput.value = coordinates.lng;
        },
        onLocationSelect: (coordinates) => {
            latInput.value = coordinates.lat.toFixed(6);
            lngInput.value = coordinates.lng.toFixed(6);
            if (dealerMarker) {
                dealerMarker.setPosition(coordinates);
            }
        }
    });

    let dealerMarker = null;

    function ensureMap(territory) {
        if (!territory || !territory.polygon_coordinates) {
            mapContainer.classList.add('hidden');
            return;
        }

        mapContainer.classList.remove('hidden');

        if (!map.map) {
            map.init();
            
            // Wait for map to be ready
            const checkMap = setInterval(() => {
                if (map.map) {
                    clearInterval(checkMap);
                    setupMarkerAndEvents(territory, true);
                }
            }, 100);
        } else {
            setupMarkerAndEvents(territory, true);
        }
    }

    function setupMarkerAndEvents(territory, fitToPolygon = false) {
        if (!map.map) return;

        // Clear and add polygon
        map.clearPolygons();
        const polygon = map.addTerritoryPolygon(territory);

        if (fitToPolygon && polygon) {
            map.fitBounds([{ polygon }]);
        }

        // Handle Marker
        const lat = parseFloat(latInput.value);
        const lng = parseFloat(lngInput.value);

        if (!isNaN(lat) && !isNaN(lng)) {
            const pos = { lat, lng };

            if (!dealerMarker) {
                dealerMarker = new google.maps.Marker({
                    position: pos,
                    map: map.map,
                    draggable: true,
                    animation: google.maps.Animation.DROP
                });

                dealerMarker.addListener('dragend', () => {
                    const p = dealerMarker.getPosition();
                    latInput.value = p.lat().toFixed(6);
                    lngInput.value = p.lng().toFixed(6);
                });

                map.map.addListener('click', (e) => {
                    dealerMarker.setPosition(e.latLng);
                    latInput.value = e.latLng.lat().toFixed(6);
                    lngInput.value = e.latLng.lng().toFixed(6);
                });
            } else {
                dealerMarker.setMap(map.map);
                dealerMarker.setPosition(pos);
            }
        } else {
            // If no coordinates yet, allow clicking map to place marker
            if (!dealerMarker) {
                const clickListener = map.map.addListener('click', (e) => {
                    dealerMarker = new google.maps.Marker({
                        position: e.latLng,
                        map: map.map,
                        draggable: true,
                        animation: google.maps.Animation.DROP
                    });
                    
                    latInput.value = e.latLng.lat().toFixed(6);
                    lngInput.value = e.latLng.lng().toFixed(6);

                    dealerMarker.addListener('dragend', () => {
                        const p = dealerMarker.getPosition();
                        latInput.value = p.lat().toFixed(6);
                        lngInput.value = p.lng().toFixed(6);
                    });

                    // Remove this one-time click listener
                    google.maps.event.removeListener(clickListener);

                    // Add the permanent move-on-click listener
                    map.map.addListener('click', (ev) => {
                        dealerMarker.setPosition(ev.latLng);
                        latInput.value = ev.latLng.lat().toFixed(6);
                        lngInput.value = ev.latLng.lng().toFixed(6);
                    });
                });
            }
        }
    }

    // Territory Change Handler
    territorySelect.addEventListener('change', () => {
        const id = parseInt(territorySelect.value, 10);
        const territory = territories.find(t => t.id === id);
        ensureMap(territory);
    });

    // Location search functionality
    const searchInput = document.getElementById('location-search');
    const searchBtn = document.getElementById('search-location-btn');
    
    const performSearch = () => {
        const query = searchInput.value.trim();
        if (!query) return;
        
        if (!map.map) {
            alert('Please select a territory first.');
            return;
        }

        // If autocomplete handled it, don't do manual search
        if (map.autocomplete) {
            return;
        }
        
        searchBtn.disabled = true;
        searchBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Searching...';
        
        map.searchLocation(query).then(() => {
            searchBtn.disabled = false;
            searchBtn.innerHTML = '<i class="fas fa-search"></i> Search';
        }).catch((error) => {
            alert('Location not found. Please try a different search term.');
            console.error('Search error:', error);
            searchBtn.disabled = false;
            searchBtn.innerHTML = '<i class="fas fa-search"></i> Search';
        });
    };

    // Initialize map if territory is already selected
    if (territorySelect.value) {
        const id = parseInt(territorySelect.value, 10);
        const territory = territories.find(t => t.id === id);
        if (territory) ensureMap(territory);
    }

    // Setup search event listeners
    searchInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
            e.preventDefault();
            performSearch();
        }
    });
    
    searchBtn.addEventListener('click', performSearch);
});
</script>
<%- include('../partials/footer') %>

