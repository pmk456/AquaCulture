<%- include('../partials/header', { title: 'Create User', currentPage: 'users', user: user }) %>

<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow p-6">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-800">Create New User</h1>
            <p class="text-gray-600 mt-1">Add a new user to the system</p>
        </div>

        <% if (typeof error !== 'undefined') { %>
            <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded text-red-700 text-sm">
                <%= error %>
            </div>
        <% } %>

        <form id="createUserForm" class="space-y-6" method="POST" action="/users">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">First Name *</label>
                    <input 
                        type="text" 
                        id="firstName" 
                        name="first_name" 
                        value="<%= formData && formData.first_name ? formData.first_name : '' %>"
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                </div>
                <div>
                    <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">Last Name *</label>
                    <input 
                        type="text" 
                        id="lastName" 
                            name="last_name" 
                            value="<%= formData && formData.last_name ? formData.last_name : '' %>"
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                </div>
            </div>

            <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                        value="<%= formData && formData.email ? formData.email : '' %>"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                >
            </div>

            <div>
                <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password *</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                        value=""
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                >
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="role" class="block text-sm font-medium text-gray-700 mb-2">Role *</label>
                    <select 
                        id="role" 
                        name="role" 
                        required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                        <option value="">Select Role</option>
                        <option value="super_admin" <%= formData && formData.role === 'super_admin' ? 'selected' : '' %>>Super Admin</option>
                        <option value="manager" <%= formData && formData.role === 'manager' ? 'selected' : '' %>>Manager</option>
                        <option value="rep" <%= !formData || formData.role === 'rep' ? 'selected' : '' %>>Rep</option>
                    </select>
                </div>
                <div>
                    <label for="territory" class="block text-sm font-medium text-gray-700 mb-2">Territory</label>
                    <select 
                        id="territory" 
                        name="territory_id"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                    >
                        <option value="">Select Territory</option>
                        <% if (typeof territories !== 'undefined') { %>
                            <% territories.forEach(t => { %>
                                <option value="<%= t.id %>" <%= formData && Number(formData.territory_id) === t.id ? 'selected' : '' %>><%= t.name %></option>
                            <% }) %>
                        <% } %>
                    </select>
                </div>
            </div>

            <div id="salesTargetField" style="display: none;">
                <label for="salesTarget" class="block text-sm font-medium text-gray-700 mb-2">Sales Target (number of sales)</label>
                <input 
                    type="number" 
                    id="salesTarget" 
                    name="sales_target" 
                    step="1"
                    min="0"
                    value="<%= formData && formData.sales_target ? formData.sales_target : '' %>"
                    placeholder="Enter monthly sales target (count of sales)"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                >
                <p class="text-xs text-gray-500 mt-1">Monthly sales target as number of sales</p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">User Territory View</label>
                <div id="user-map" style="height: 300px; width: 100%; border: 2px solid #e5e7eb; border-radius: 0.5rem;" class="mb-2"></div>
                <p class="text-xs text-gray-500">Visualization of the assigned territory boundary.</p>
            </div>

            <div>
                <label class="flex items-center">
                    <input type="checkbox" name="is_active" value="true" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500" <%= !formData || formData.is_active === undefined || formData.is_active === true || formData.is_active === 'true' ? 'checked' : '' %>>
                    <span class="ml-2 text-sm text-gray-700">Active User</span>
                </label>
            </div>

            <div class="flex items-center justify-end space-x-4 pt-4 border-t border-gray-200">
                <a href="/users" class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                    Cancel
                </a>
                <button 
                    type="submit"
                    class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                >
                    Create User
                </button>
            </div>
        </form>
    </div>
</div>

<script src="/js/map.js"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
    const roleSelect = document.getElementById('role');
    const salesTargetField = document.getElementById('salesTargetField');
    const territorySelect = document.getElementById('territory');
    
    // Territories data for map preview
    const territories = <%- typeof territories !== 'undefined' ? JSON.stringify(territories) : '[]' %>;
    
    if (roleSelect && salesTargetField) {
        // Show/hide sales target based on role
        const toggleSalesTarget = () => {
            if (roleSelect.value === 'rep') {
                salesTargetField.style.display = 'block';
            } else {
                salesTargetField.style.display = 'none';
            }
        };
        
        roleSelect.addEventListener('change', toggleSalesTarget);
        toggleSalesTarget(); // Initial check
    }

    // Map initialization
    const map = new TerritoryMap('user-map', {
        enableDrawing: false,
        zoom: 10
    });
    map.init();

    const updateMap = () => {
        const territoryId = territorySelect.value;
        map.clearPolygons();
        
        if (territoryId) {
            const territory = territories.find(t => t.id == territoryId);
            if (territory && territory.polygon_coordinates) {
                const poly = map.addTerritoryPolygon(territory);
                if (poly) {
                    const bounds = new google.maps.LatLngBounds();
                    const path = poly.getPath();
                    for (let i = 0; i < path.getLength(); i++) {
                        bounds.extend(path.getAt(i));
                    }
                    map.map.fitBounds(bounds);
                }
            }
        }
    };

    territorySelect.addEventListener('change', updateMap);
    
    // Initial map update
    setTimeout(() => {
        if (map.map) updateMap();
    }, 1000);
});
</script>
<%- include('../partials/footer') %>

