<%- include('../partials/header', { title: 'Territories', currentPage: 'territories', user: user }) %>

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Territories Management</h1>
            <p class="text-gray-600 mt-1">Manage sales territories and regions</p>
        </div>
        <a href="/territories/new" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors flex items-center">
            <i class="fas fa-plus mr-2"></i>Add Territory
        </a>
    </div>

    <!-- Territories Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% if (territories && territories.length) { %>
            <% territories.forEach(t => { %>
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-semibold text-gray-800"><%= t.name %></h3>
                        <span class="px-2 py-1 text-xs rounded-full <%= t.is_active ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600' %>">
                            <%= t.is_active ? 'Active' : 'Inactive' %>
                        </span>
                    </div>
                    <p class="text-sm text-gray-500 mb-4"><%= t.description || 'No description provided.' %></p>
                    <div class="space-y-2 mb-4">
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-gray-600">Dealers</span>
                            <span class="font-medium text-gray-800"><%= t.stats ? t.stats.dealers : 0 %></span>
                        </div>
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-gray-600">Reps</span>
                            <span class="font-medium text-gray-800"><%= t.stats ? t.stats.reps : 0 %></span>
                        </div>
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-gray-600">Visits (30d)</span>
                            <span class="font-medium text-gray-800"><%= t.stats ? t.stats.visits_30d : 0 %></span>
                        </div>
                    </div>
                    <div class="flex items-center space-x-2 pt-4 border-t border-gray-200">
                        <a href="/territories/<%= t.id %>" class="flex-1 text-center px-4 py-2 border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 transition-colors text-sm">
                            View Territory
                        </a>
                        <a href="/territories/<%= t.id %>/edit" class="flex-1 text-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm">
                            Edit
                        </a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-span-full bg-white rounded-lg shadow p-6 text-center text-gray-500">
                No territories found. <a href="/territories/new" class="text-blue-600 hover:text-blue-800 font-medium">Create one</a>.
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>

